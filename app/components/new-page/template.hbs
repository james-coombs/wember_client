<div class="col-md-12 new-page">
<form enctype="multipart/form-data" id="new-page-form" {{ action 'createPage' on='submit' }}>
  <fieldset>
    <legend>Add New Page</legend>
    <input type="text" class="form-control" name="page[title]" placeholder="Page Title">
    <br>
    <textarea class="form-control" name="page[body]" placeholder="Page Body" rows="5" cols="5"></textarea>
    <br>
    <input type="hidden" name="page[board_id]" value="{{board.id}}">
    <input type="hidden" name="page[user_id]" value="{{user.id}}">
    <input type="file" name="page[image]" value="Upload Image">
    <br>
    <input type="submit" class="btn btn-success" name="submit" value="Create Page">
  </fieldset>
</form>
</div>

