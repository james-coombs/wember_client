<div class="col-md-4 server-card">

  {{#link-to 'server' server}}<h2>{{server.name}}</h2>{{/link-to}}
  {{#if server.canBeDeleted}}
  <button class="btn btn-xs btn-danger" {{action 'delete'}}>
     Delete
  </button>

  <button class="btn btn-xs btn-warning" {{action 'edit'}}>
     Edit
  </button>
    {{/if}}

</div>

{{yield}}
